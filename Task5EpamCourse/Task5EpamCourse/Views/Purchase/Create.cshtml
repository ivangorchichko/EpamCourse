@model Task5EpamCourse.Models.Purchase.PurchaseViewModel
@{
    ViewBag.Title = "View";
}

<h2>Create</h2>

<div class="panel-success">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
        <div class="form-group">
            <label>Дата заказа</label>
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
        </div>
            <div class="form-group">
                <label>Имя клиента</label>
                @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Телефон клиента</label>
                @Html.TextBoxFor(x => x.ClientTelephone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Название продукта</label>
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Цена продукта</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            </div>
            <div id="filter-radio-button">
                @foreach (var manager in ViewBag.Managers)
                {
                    <label>@InputExtensions.RadioButton(Html, "selectManager", manager) @manager</label>
                }
            </div>
            <div class="text-center">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
